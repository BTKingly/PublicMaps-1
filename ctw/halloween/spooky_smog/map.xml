<map proto="1.4.2">
<name>Spooky Smog</name>
<version>1.0.2</version>
<phase>development</phase>
<objective>Captured the enemy's two wools and place them on your victory monument</objective>
<authors>
    <author uuid="e931b4b3-479f-4761-8808-4c4b2ed69b0f"/> <!-- Theta_ -->
    <author uuid="82d03646-d1a1-4383-a533-9509b130f751"/> <!-- iLifting -->
    <author uuid="205d1aad-c619-499b-9885-b91c372b1c13"/> <!-- lord_creeper01 -->
</authors>
<contributors>
    <contributor uuid="083ec416-c87e-438f-8732-170798b4fe93" contribution="XML"/> <!-- orky48 -->
</contributors>
<rules>
    <rule>Do not obstruct more than two blocks of the lane with lava</rule>
</rules>
<teams>
    <team id="blue" color="blue" max="32">Blue</team>
    <team id="red" color="dark red" max="32">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" material="iron sword"/>
        <item slot="1" material="bow"/>
        <item slot="2" material="iron pickaxe"/>
        <item slot="3" material="iron axe"/>
        <item slot="4" amount="64" material="pumpkin pie"/>
        <item slot="5" amount="64" material="log 2"/>
        <item slot="6" amount="64" team-color="true" material="stained glass"/>
        <item slot="7" amount="64" material="arrow"/>
        <item slot="8" amount="64" material="arrow"/>
    </kit>
</kits>
<spawns>
    <spawn team="blue" kit="spawn-kit">
        <regions>
            <cylinder base="-22.5,114,22.5" radius="2" height="0"/>
        </regions>
    </spawn>
    <spawn team="red" kit="spawn-kit" yaw="180">
        <regions>
            <cylinder base="-22.5,114,-81.5" radius="2" height="0"/>
        </regions>
    </spawn>
    <default yaw="-90">
        <regions>
            <cuboid min="37,157,-30" max="39,157,-28"/>
        </regions>
    </default>
</spawns>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
    <not id="only-red-usage">
        <all>
            <any>
                <material>chest</material>
                <material>workbench</material>
            </any>
            <team>blue</team>
        </all>
    </not>
    <not id="only-blue-usage">
        <all>
            <any>
                <material>chest</material>
                <material>workbench</material>
            </any>
            <team>red</team>
        </all>
    </not>
    <any id="only-iron">
        <material>iron block</material>
        <material>diamond block</material>
    </any>
    <deny id="no-void">
        <void/>
    </deny>
    <any id="only-blue-web">
        <team>blue</team>
        <material>web</material>
    </any>
    <any id="only-red-web">
        <team>red</team>
        <material>web</material>
    </any> 
</filters>
<regions>
    <!-- Wool rooms blue need to enter -->
    <union id="blue-wool-rooms">
        <rectangle min="-56,-105" max="-48,-97"/>
        <rectangle min="3,-105" max="11,-97"/>
    </union>
    <!-- Wool rooms red need to enter -->
    <union id="red-wool-rooms">
        <rectangle min="-56,38" max="-48,46"/>
        <rectangle min="3,38" max="11,46"/>
    </union>
    <union id="spawns">
        <rectangle id="no-blue-spawn" max="-13,16" min="-32,33"/>
        <rectangle id="red-spawn" max="-13,-75" min="-32,-92"/>
    </union>
    <union id="lava">
        <union id="red-lava">
            <cuboid min="17,114,-47" max="20,151,-44"/>
            <cuboid min="26,135,-85" max="29,151,-88"/>
            <cuboid min="-6,135,-120" max="-9,151,-123"/>
            <cuboid min="-39,135,-120" max="-36,151,-123"/>
            <cuboid min="-71,135,-85" max="-74,151,-88"/>
            <cuboid min="-65,114,-47" max="-62,151,-44"/>
        </union>
        <mirror id="blue-lava" region="red-lava" origin="-22.5,0,-29.5" normal="0,0,1"/>
    </union>
    <negative id="void-area">
        <rectangle min="-31,-75" max="-14,15"/>
        <rectangle min="-66,-48" max="21,-11"/>
    </negative>
    <apply region="void-area" block="no-void" message="You may not build in the void"/>
    <apply region="spawns" block="only-iron" message="You may not modify spawn!"/>
    <apply region="red-wool-rooms" enter="only-red" block="only-red-web" use="only-red-usage" message="You may not enter or modify the wool rooms!"/>
    <apply region="blue-wool-rooms" enter="only-blue" block="only-blue-web" use="only-blue-usage" message="You may not enter or modify the wool rooms!"/>
    <apply enter="only-red" message="You may not enter the other team's spawn">
        <region>
            <rectangle max="-29,-90" min="-16,-88"/>
        </region>
    </apply>
    <apply enter="only-blue" message="You may not enter the other team's spawn">
        <region>
            <rectangle max="-16,29" min="-29,32"/>
        </region>
    </apply>
    <apply block="never" message="You may not underbridge here!">
        <region>
            <below y="104"/>
        </region>
    </apply>
    <apply region="lava" block="never" message="You may not edit this lava area!"/>
</regions>
<wools>
    <wool team="blue" color="orange" location="9.5,128,-103.5">
        <monument>
            <block>17.5,134,52.5</block>
        </monument>
    </wool>
    <wool team="blue" color="cyan" location="-54.5,128,-103.5">
        <monument>
            <block>-62.5,134,52.5</block>
        </monument>
    </wool>
    <wool team="red" color="lime" location="9.5,128,44.5">
        <monument>
            <block>17.5,134,-111.5</block>
        </monument>
    </wool>
    <wool team="red" color="pink" location="-54.5,128,44.5">
        <monument>
            <block>-62.5,134,-111.5</block>
        </monument>
    </wool>
</wools>
<renewables>
    <renewable rate="2.5" grow="false" particles="true" sound="true">
        <region>
            <cuboid min="30,85,65" max="-78,177,-123"/>
        </region>
        <renew-filter>
            <material>iron block</material>
        </renew-filter>
        <replace-filter>
            <material>air</material>
        </replace-filter>
    </renewable>
</renewables>
<itemremove>
    <item>obsidian</item>
    <item>step</item>
    <item>pumpkin pie</item>
    <item>log</item>
    <item>stained glass</item>
    <item>log 2</item>
    <item>wood</item>
    <item>arrow</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
</toolrepair>
<maxbuildheight>145</maxbuildheight>

<map proto="1.4.2">
<name>Drow's Crevice: Blitz</name>
<version>1.0.2</version>
<objective>Eliminate the enemy team in 8 minutes or less. You have one life!</objective>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="c65e66b3-e932-4b33-b907-fe4916806076"/> <!-- Draco_Rogue -->
    <author uuid="8d812ffa-e5f1-4658-bb47-a18b785ccd27"/> <!-- HardstyleRaver2 -->
</authors>
<teams>
    <team id="orange" color="gold" max="16" max-overfill="20">Orange</team>
    <team id="blue" color="blue" max="16" max-overfill="20">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <item slot="0" material="stone sword"/>
        <item slot="1" material="bow"/>
        <item slot="2" amount="8" material="torch"/>
        <item slot="3" amount="16" material="grilled pork"/>
        <item slot="4" damage="8261" material="potion"/>
        <item slot="8" amount="16" material="arrow"/>        
        <helmet team-color="true" material="leather helmet"/>
        <chestplate material="iron chestplate"/>
        <leggings team-color="true" material="leather leggings"/>
        <boots material="iron boots"/>
    </kit>
</kits>
<spawns>
    <spawn team="orange" kit="spawn-kit" yaw="-90">
        <regions>
            <cuboid min="244,21,-2" max="241,21,1"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="spawn-kit" yaw="90">
        <regions>
            <cuboid min="156,21,1" max="153,21,-2"/>
        </regions>
    </spawn>
    <default>
        <regions>
            <point>198.5,14,-0.5</point>
        </regions>
    </default>
</spawns>
<filters>
    <material id="only-torch">torch</material>
</filters>
<regions>
    <apply block="only-torch"/>
</regions>
<time>8m</time>
<blitz>
    <lives>1</lives>
</blitz>
<itemremove>
    <item>leather helmet</item>
    <item>iron chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>potion</item>
    <item>glass bottle</item>
    <item>grilled pork</item>
    <item>torch</item>
</itemremove>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<kill-rewards>
    <kill-reward>
        <item amount="4" material="arrow"/>
        <item damage="8261" material="potion"/>
    </kill-reward>
</kill-rewards>
<timelock>on</timelock>

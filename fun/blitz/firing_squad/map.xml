<map proto="1.4.2">
<name>Firing Squad</name>
<version>1.5.0</version>
<objective>Eliminate the enemy team!</objective>
<gamemode>Blitz</gamemode>
<created>2023-08-09</created>
<include src="blitz-global.xml"/>
<authors>
    <author uuid="79d4d76e-e08a-4a35-9411-05dd2397361f"/> <!-- Hydrosion -->
    <author uuid="2ca8072f-74be-4798-85b8-bbce03aa91af"/> <!-- Tywnis -->
</authors>
<contributors>
    <contributor uuid="2ca8072f-74be-4798-85b8-bbce03aa91af" contribution="XML"/> <!-- Tywnis -->
    <contributor uuid="430ec559-364a-4363-ac7a-2529050440ac" contribution="MCEdit, XML"/> <!-- mame_BT -->
</contributors>
<teams>
    <team id="red" color="dark red" max="1337">Red</team>
    <team id="blue" color="blue" max="1337">Blue</team>
</teams>
<constants>
    <constant id="map-origin">0.5,0,0.5</constant>
    <constant id="void-plane">-5</constant>
</constants>
<blitz>
    <lives>5</lives>
    <broadcastLives>true</broadcastLives>
</blitz>
<score>
    <!-- First team to reach 100 points wins the match -->
    <limit>100</limit>
    <kills>2</kills> <!-- +3 points for every kill -->
    <deaths>1</deaths> <!-- -2 points for accidentally dying -->
</score>
<time>5m</time>
<respawn delay="3s" blackout="true"/>
<kits>
    <kit id="spawn">
        <item slot="0" name="Yeeter" lore="Get Back!" enchantment="punch:1, infinity">bow</item>
        <item slot="8" material="arrow" amount="20"/>
        <effect duration="oo" amplifier="1">heal</effect>
    </kit>
    <kit id="void-death" force="true">
        <clear effects="true" items="false" armor="false"/>
        <health>1</health>
    </kit>
</kits>
<spawns>
    <spawn team="blue" kit="spawn">
        <regions yaw="180">
            <cuboid min="0.5,2,4.5" max="0.5,2,4.5"/>
        </regions>
    </spawn>
    <spawn team="red" kit="spawn">
        <regions yaw="0">
            <cuboid min="0.5,2,-3.5" max="0.5,2,-3.5"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="180" pitch="25">
            <cylinder base="0.5,12.5,0.5" radius="1" height="0"/>
        </regions>
    </default>
</spawns>
<portal y="@-110" sound="false" region="void" observers="always"/>
<hunger>
    <depletion>off</depletion>
</hunger>
<regions>
    <apply block="never" use="never" region="everywhere"/>
    <below id="void" y="${void-plane}"/>
    <apply kit="void-death" region="void"/>
</regions>
<itemremove>
    <item>bow</item>
    <item>arrow</item>
</itemremove>
</map>
